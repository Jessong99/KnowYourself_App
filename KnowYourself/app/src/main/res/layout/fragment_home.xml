<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_DISCTest"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#a1be95"
                android:text="Take DISC Test" />

            <Button
                android:id="@+id/btn_DISCResult"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#e2dfa2"
                android:text="Result History" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#beb295"
                android:text="Personality Profile" />

            <Button
                android:id="@+id/btn_myFeed"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#ebb582"
                android:text="My Feed" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_user_profile"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#c9d1c8"
                android:text="Setting" />

            <Button
                android:id="@+id/btn_about_us_home"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:backgroundTint="#7bc3b9"
                android:text="About Us" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>