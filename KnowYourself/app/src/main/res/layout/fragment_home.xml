<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_DISCTest"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/take_disc_test"
                android:text="" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_DISCResult"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/result_history"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/disc_profile"
                android:text="" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_myFeed"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/my_feed"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:padding="10dp">

            <Button
                android:id="@+id/btn_user_profile"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/profile_setting"
                android:text="" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_about_us_home"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@drawable/about_us"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>